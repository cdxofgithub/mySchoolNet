 .bottom .left {
  width: 40%;
  height: 100%;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 34rpx;
  color: #f5ba2e;
} 

.bottom .right {
  width: 60%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f5ba2e;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
}

.comment, .like {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comment image, .like image {
  width: 36rpx;
  height: 36rpx;
  padding: 8rpx 0 6rpx;
}

.review {
  position: fixed;
  width: 690rpx;
  background: #f1f1f1;
  padding: 30rpx;
  bottom: 0;
  z-index: 100;
}

.review .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
}

.review .top image {
  width: 32rpx;
  height: 32rpx;
}

.review .centre {
  width: 100%;
}

.review .centre textarea {
  background: #fff;
  width: auto;
  padding: 14px;
  height: 160rpx;
  font-size: 28rpx;
  margin: 30rpx 0;
}

.bot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rule {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  color: #5c5c5c;
}

.rule image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.bot .send {
  width: 160rpx;
  height: 70rpx;
  border-radius: 8rpx;
  font-synthesis: 38rpx;
  line-height: 70rpx;
  text-align: center;
  background: #f5ba2e;
  color: #fff;
}
