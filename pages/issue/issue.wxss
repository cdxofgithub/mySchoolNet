.contant {
  background: #fff;
  padding: 0 30rpx;
}
.write {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ebebeb;
}
textarea {
  width: 100%;
  padding: 50rpx 0;
  height: 120rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  line-height: 36rpx;
}
.addImg {
  width: 120rpx;
  height: 120rpx;
  border: 3px dashed #ebebeb;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addImg image{
  width: 50rpx;
  height: 50rpx;
}
.hint {
  padding: 15rpx;
  font-size: 24rpx;
  color: #5c5c5c;
  background: #f1f1f1;
  letter-spacing: 2rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ebebeb;
  font-size: 32rpx;
}
.item .left, .item .right {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item .left {
  width: 200rpx;
}
.item .left view {
  width: 100%;
}
.price .right {
  width: 220rpx;
  text-align: center;
}
.phone .right, .address .right {
  text-align: right;
}
.item .left image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 15rpx;
}
.item .right image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.switch {
  margin-top: 30rpx;
  background: #fff;
  padding: 30rpx 60rpx;
}
.switch .right image {
  width: 16rpx;
  height: 30rpx;
}
.item .right switch {
  transform: scale(0.9)
}
.item .left input {
  width: 600rpx;
}
.remark .left {
  width: 30%;
}
.remark .right {
  width: 70%;
}
.remark .right input {
  width: 100%;
  text-align: right;
}
