/* pages/my/my.wxss */
.header {
  padding: 50rpx 0;
  display: flex;
  justify-content: flex-start;
}
.avatar {
  margin-right: 50rpx;
}
.avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.header .name {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}
.header .name .nickname {
  font-size: 44rpx;
  font-weight: 600;
}
.header .name .sex {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
}
.header .name .sex image {
  width: 23rpx;
  height: 23rpx;
  margin-right: 10rpx;
}
.await {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}
.await .await_item {
  text-align: center;
}
.await .line {
  width: 1rpx;
  height: 30rpx;
  background: #ebebeb;
}
.await_item .name {
  font-weight: 500;
  font-size: 32rpx;
}
.await_item .num {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.item {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #ebebeb;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
}
.item .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item .left .icon {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  width: 32rpx;
  height: 32rpx;
}
.item .left image {
  width: 32rpx;
  height: 32rpx;
}
.item .right {
  display: flex;
  align-items: center;
}
.item .right image {
  width: 17rpx;
  height: 30rpx;
}
.item .approve {
  font-size: 30rpx;
  color: #999999;
}