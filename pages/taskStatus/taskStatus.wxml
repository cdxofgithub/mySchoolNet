<!--pages/taskStatus/taskStatus.wxml-->
<import src="../../toast/toast.wxml" />
<template is="wxToast" data="{{...wxToastConfig}}"></template>
<view wx:if="{{show}}">
  <view class='container'  wx:if="{{taskList.length > 0}}">
  <view class='item' wx:for="{{taskList}}" wx:key="{{index}}" data-index="{{item.id}}" catchtap='toDetail'>
    <view class='avatar'>
      <image src='{{item.headImg}}'></image>
    </view>
    <view class='content'>
      <view class='top'>
        <view>
          <view class='name'>{{item.nickName}}</view>
          <view class='school'>
            <image src="{{item.sex == 1? '../../images/boy.png' : (item.sex == 2 ? '../../images/girl.png' : '../../images/unknow.png')}}"></image>南阳理工学院</view>
        </view>
        <view>
          <view class='time'>{{item.distanceTime}}</view>
          <view class='state'>
            <image src='../../images/ling.png'></image>
          </view>
        </view>
      </view>
      <view class='front'>{{item.content}}</view>
      <view class='bottom'>
        <view class='hot'>{{item.des}}</view>
        <view class='line'></view>
        <view class='price'>赚{{item.price}}元</view>
      </view>
    </view>
  </view>
</view>
<view class='empty' wx:if="{{taskList.length <= 0}}">
  <image src='../../images/no_dd@2x.png'></image>
  <view class='text'>暂无该状态任务！</view>
</view>
</view>

 <view class='noMore' wx:if="{{!isRefresh}}">----大兄弟，没有更多了----</view>